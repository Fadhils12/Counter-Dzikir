<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf2e6"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_dzikir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dzikir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dzikir"
        android:textColor="#302415"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dzikir">

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#302415"
            android:textSize="100sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_btn_count"
            android:paddingBottom="8dp"
            android:text="-"
            android:layout_marginLeft="24dp"
            android:layout_marginVertical="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#f0b76d"
            android:textSize="50sp"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:layout_marginVertical="30dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_btn_count"
            android:text="+"
            android:textColor="#f0b76d"
            android:textSize="50sp"
            android:layout_alignParentRight="true" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_reset"
        android:text="Reset"
        android:textColor="#f0b76d"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>